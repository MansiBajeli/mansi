#include <iostream> 

using namespace std;

string test(string str, char ch) {
    string result_str; 
    for (int i = 0; i < str[i]!='\0'; i++) {
        if (str[i] != ch) { 
            result_str += str[i]; 
    }
}
    return result_str;
}

int main() {
    string str=" hello world";
    char ch = 'l';
    cout << "string after removing character:"  << test(str, ch) << endl;
}
